<Page
    x:Class="UnEx_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnEx_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="btnHandledException" Content="Handled Exception" Width="161" Margin="0,1,0,0" VerticalAlignment="Top" Click="btnHandledException_Click"/>
        <Button x:Name="btnUnhandledException" Content="Unhandled Exception" Width="161" Margin="166,1,0,0" VerticalAlignment="Top" Click="btnUnhandledException_Click"/>
        <TextBlock x:Name="textBlock" Margin="19,62,10,42" TextWrapping="Wrap" Text="TextBlock" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment"/>
        <Button x:Name="btnTaskException" Content="TASK EXCEPTION" Margin="364,1,0,0" VerticalAlignment="Top" d:LayoutOverrides="HorizontalAlignment" Click="btnTaskException_Click"/>
        <Button x:Name="btnReadFirstChanceExceptions" Content="Read First Chance Exceptions" Margin="535,1,0,0" VerticalAlignment="Top" Click="btnReadFirstChanceExceptions_Click" d:LayoutOverrides="HorizontalAlignment"/>

    </Grid>
</Page>
